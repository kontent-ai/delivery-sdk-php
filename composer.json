{
    "name": "kontent-ai/delivery-sdk-php",
    "type": "library",
    "license": "MIT",
    "description": "Kontent.ai Delivery SDK for PHP",
    "keywords": [
        "delivery",
        "content-delivery",
        "headless",
        "cms",
        "kontent-ai",
        "headless-cms"
    ],
    "homepage": "https://kontent.ai/",
    "authors": [
        {
            "name": "Kontent.ai DevRel",
            "email": "devrel@kontent.ai"
        },
        {
            "name": "Stephen Rushing",
            "email": "stephen.rushing@esiteful.com"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "nategood/httpful": "^0.2.20 || ^0.3 || ^1.0",
        "kub-at/php-simple-html-dom-parser": "^1.9"
    },
    "require-dev": {
        "phpdocumentor/shim": "^3.3",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Kontent\\Ai\\": "src/Kontent/Ai"
        }
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        }
    }
}
